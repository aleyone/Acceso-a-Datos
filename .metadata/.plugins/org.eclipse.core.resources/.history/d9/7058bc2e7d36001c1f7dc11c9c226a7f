package es.addbl3.AE3;

import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		Libro milibro = new Libro(1, "titulo1", "autor1", "año1", "editorial1", "muchas paginas");
		milibro.mostrarLibro(milibro);
		System.out.println(milibro.recuperarTodos());
		Scanner teclado = new Scanner(System.in);
		String respuesta = "";
		while (!respuesta.equals("6")) {
			System.out.println(
					"1. Mostrar todos los títulos de la biblioteca\n" + "2. Mostrar información detallada de un libro\n"
							+ "3. Crear un nuevo libro\n" + "4. Actualizar libro\n" + "5. Borrar libro\n"
							+ "6. Cerrar la biblioteca\n\n" + "Elige una opción: ");
			respuesta = teclado.nextLine();

			switch (respuesta) {
			case "1":
				System.out.println("Mostrar biblioteca");
				break;
			case "2":
				System.out.println("Mostrar libro");
				break;
			case "3":
				System.out.println("Crear libro");
				break;
			case "4":
				System.out.println("Actualizar libro");
				break;
			case "5":
				System.out.println("Borrar libro");
				break;
			case "6":
				System.out.println("Cerrar biblioteca");
				break;
			default:
				System.out.println("Opción no válida");

			}

		}
	}
}
